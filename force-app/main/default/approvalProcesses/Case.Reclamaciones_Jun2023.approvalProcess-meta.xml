<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>CaseNumber</field>
        <field>Folio_de_Reclamacion__c</field>
        <field>Owner</field>
        <field>CreatedDate</field>
        <field>Status</field>
        <field>Priority</field>
        <field>Origin</field>
        <field>Lugar_de_Compra__c</field>
        <field>Reason</field>
        <field>Regi_n__c</field>
        <field>Account</field>
        <field>Contact</field>
        <field>Descripcion_repuesto__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Escalacion_Calidad</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Estatus_Control_de_Calidad</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>atencionaclientes@imperquimia.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Revisión de Evidencia</label>
        <name>Revisi_n_de_Evidencia</name>
        <rejectionActions>
            <action>
                <name>Estatus_Rechazado_por_Informaci_n</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Rechazo_reclamacion_evidencia</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Estatus_Procede</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Resolucion_Caso</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Resolucion_Caso_Ejecu</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>groldan@imperquimia.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Gestión de Control de Calidad</label>
        <name>Gesti_n_de_Control_de_Calidad</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Estatus_No_Procede</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Resolucion_Caso</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Resolucion_Caso_Ejecu</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>Casos/Nuevo_Caso</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 OR 2</booleanFilter>
        <criteriaItems>
            <field>Case.Status</field>
            <operation>equals</operation>
            <value>Nuevo</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Status</field>
            <operation>equals</operation>
            <value>Rechazado por evidencia</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>EscalacionAtencionC</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Escalado</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Reclamaciones Jun2023</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
