<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Fecha__c</field>
        <field>Area_ID__c</field>
        <field>Identificacion_Solicitud__c</field>
        <field>Tipo_de_Solicitud__c</field>
        <field>Owner</field>
        <field>Necesidad_del_Desarrollo_o_Mejora__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Desarrollo_Aprobado</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Enviar_notificaci_n</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Estatus_Canalizado</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>desarrollo@imperquimia.com.mx</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Jefe de I+D</label>
        <name>Jefe_de_I_D</name>
        <rejectionActions>
            <action>
                <name>Desarrollo_detenido</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Detenido</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Reenvio de solicitud cuando el proceso se encuentra detenido por información</description>
    <emailTemplate>Desarrollo_o_Mejora/Reenvio_de_solicitud_I_D</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Desarrollo_o_Mejora__c.Estatus_de_la_solicitud__c</field>
            <operation>equals</operation>
            <value>Detenido por falta de información</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Estatus_en_Proceso</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Desarrollo o Mejora2</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
